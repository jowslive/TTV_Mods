<h1 class="text-center">
  <%= @bot.name %>
</h1>
<% @configs.each do |config| %>
  <h4> 
    <%= config.name %> 
    <%= link_to "✏️ Editar config", edit_bot_config_path({ id: config.id, bot_id: @bot.id }) %>
    <%= link_to "🗑️ Excluir config", config_path({ id: config.id, bot_id: @bot.id }), method: 'DELETE', data: { confirm: 'Você tem certeza?' } %>
    
    <% if Favorite.find_by(config_id: config.id, user_id: current_user).present? %>
      <%= link_to "❌ DesFavoritar config", favorite_path(config), method: 'DELETE', data: { confirm: 'Você tem certeza?' } %>
    <% else %>
      <%= link_to "⭐ Favoritar config", favorites_path(config), method: 'POST' %>
    <% end %>
  </h4>
<% end %>
<h4><%= link_to "✅ Criar config", new_bot_config_path(@bot.id), class: "btn btn-primary text-white" %></h4>
