<div class="menu-open">
  <h1 class="text-center">
    TODOS OS BOTS
  </h1>
  
  <div class="d-flex flex-wrap justify-content-around my-5">
    <div class="row w-100">
      <% @bots.each do |bot| %>
        <div class="col-sm-12 col-md-3 col-lg-3 d-flex justify-content-center mb-5 card-p-0" >
          <a href="<%= bot_path(bot) %>">
            <div class="card custom-card bordered-card">
              <div class="card-body custom-card-body">
                <div class="d-flex justify-content-between"> 
                  <%= image_tag bot.photo, class: "custom-card-image" %>
                </div>
                <% if policy(@bots).edit? %>
                  <div class="text-center">
                    <%= link_to "✏️ Editar bot", edit_bot_path(bot.id) %>
                    <%= link_to "🗑️ Excluir bot", bot_path(bot.id), method: 'delete', data: { confirm: 'Você tem certeza?' } %>
                  </div>
                <% end %>  
              </div>
            </div>
          </a>
        </div>
      <% end %>
      <% if policy(@bots).new? %>
      <div class="col-sm-12 col-md-3 col-lg-3 d-flex justify-content-center mb-5 card-p-0">
        <div class="card custom-card bordered-card">
          <div class="card-body custom-card-body">
            <% if policy(@bots).edit? %>
              <div class="text-center">
                <%= link_to "Criar bot", new_bot_path, class: "btn btn-primary text-white" %>
              <% end %>
              </div>
            <% end %>  
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

